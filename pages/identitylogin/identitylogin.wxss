/* pages/identitylogin/identitylogin.wxss */
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  
.head{display:flex;flex-direction: column;background: #efefef;width:100%;padding: 100rpx 0rpx; align-items: center;  justify-content: space-between;background: #fff}

.wrapper{
    margin: 30rpx;
}
.content .box{
  width: 100%;
  display: flex;
  height: 80rpx;
}
.content .studentId{
  border-bottom: 2rpx solid #E6E6E6;
}
.box .left{
  width: 30%;
  line-height: 80rpx;
  color: #888888;
}
.box .right{
  width: 70%;
  line-height: 80rpx;
}
.box .right>input{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}
.submit{
  margin-top: 40rpx;
  background-color: #4087F2;
  color: #FFF;
}
.wrapper .prompt{
  margin-top: 20rpx;
  text-indent: 2em;
  font-size: 30rpx;
}