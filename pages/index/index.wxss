/**index.wxss**/
.pandel{
  margin: 15rpx;
}
.panel-header-title{
  font-size: 36rpx;
}
.panel-header-image{
  height: 50rpx;
  width: 50rpx;
  float: left;
  margin: 20rpx;
}

.panel-header{
  height: 80rpx;
  font-size: 48rpx;
  line-height: 80rpx;
}

.nav-list{
  display: flex;
  flex-wrap:wrap;
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.nav-list .nav{
  width: 32%;
  display: flex;
  flex-direction:column;
  align-items: center;
  margin-bottom: 20rpx;
}

.nav .navigator-style{
  width: 110rpx;
  height: 110rpx;
  position: relative;
  
}
.nav .navigator-style image{
  position: absolute;
  width: 110rpx;
  height: 110rpx;
}
.nav .wechat-text{
  font-size: 24rpx;
  height: 45rpx;
  color: grey;
}

.balance{
  font-size: 30rpx;
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
}
.balance .update{
  position: absolute;
  right: 90rpx;
  top: 0rpx;
}
.panel-body{
  margin: 10rpx;
}
.subject-time{
  padding: 30rpx;
  float: left;
}
.subject-room-image{
  height: 25rpx;
  width: 25rpx;
  float: left;
  margin-right: 5rpx;
}
.subject-room{
  font-size: 24rpx;
}

.subject{
  margin: 5rpx;
}
.clear{
  clear: both;
}

.wechat{
  text-align: center;
  font-size: 30rpx;
}


.button-elec{
  width:300rpx;
  height:100rpx;
  font-size: 40rpx;
  line-height: 100rpx;
  position:absolute;
  left:220rpx;
  
  color:grey;
}

.text-elec{
  font-size: 32rpx;
  font-weight: 200;
  color:black;
}

.text-show-elec-button{
  height:50rpx;
  line-height: 20rpx;
  font-size: 50rpx;
  font-weight:500;
  display: block;
  color: grey;
  margin-left:230rpx;
  margin-top:70rpx;
}

.text-show-elec-text{
  height:50rpx;
  line-height: 50rpx;
  font-size: 50rpx;
  font-weight:500;
  display: block;
  color: grey;
  margin-left:230rpx;
  margin-top:70rpx;
}

.elec-bg{
  position: absolute;
  height: 350rpx;
  width: 350rpx;
  top: -150rpx;
  left: 185rpx;
  z-index: -1;
