<view class='head'>
  <view class='userinfo-avatar'>
    <navigator url="/pages/my/info">
      <open-data type="userAvatarUrl"></open-data>
    </navigator>
  </view>
</view>



<view class="weui-cell weui-cell_input number">
  <view class="weui-cell__hd">
    <view class="weui-label">学号</view>
  </view>
  <view class="weui-cell__bd">
    <input class="weui-input" bindinput='bindUserNameInput' type="text" name="username" value="{{username}}" placeholder="请输入学号" />
  </view>
</view>

<view class="weui-cell weui-cell_input password">
  <view class="weui-cell__hd">
    <view class="weui-label">密码</view>
  </view>
  <view class="weui-cell__bd">
    <input class="weui-input" bindinput='bindPasswordInput' type="password" name="password" value="{{password}}" placeholder="请输入教务密码" />
  </view>
</view>

<view class="btn">
  <van-button type="info" bindtap='formSubmit' class="login">登录</van-button>
  <van-button type="warning" class="skip" bindtap="skip">跳过</van-button>
</view>
