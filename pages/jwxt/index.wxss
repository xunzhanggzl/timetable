/* pages/jwxt/index.wxss */

.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  
.head{display:flex;flex-direction: column;background: #efefef;width:100%;padding: 100rpx 0rpx; align-items: center;  justify-content: space-between;background: #fff}

.content{
  margin: 30rpx;
  box-sizing: border-box;
}
.content .box{
  width: 100%;
  display: flex;
  height: 80rpx;
}
.content .studentId{
  border-bottom: 2rpx solid #E6E6E6;
}
.box .left{
  width: 30%;
  line-height: 80rpx;
  color: #888888;
}
.box .right{
  width: 70%;
  line-height: 80rpx;
}
.box .right>input{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.btn{
  margin-top: 40rpx;
  width: 100%;
}
.btn .login{
  background-color: #4087F2;
  margin-bottom: 30rpx;
  color: #FFFFFF;
}
.btn .skip{
  background-color: #EBEBEB;
  color: #A0A0A0;
}