.showData{
  display: flex;
  flex-wrap:wrap;
  margin-top: 20rpx;
}
.showData .dataitem{
  width: 30%;
  border-bottom: 1rpx solid rgba(219, 219, 219, 1);
  margin-right: 20rpx;
  text-align: center;
}

.btn{
  margin-top: 40rpx;
  text-align: center;
}
