/* pages/timetable/index.wxss */
.nav{
  height: 90rpx;
  display: flex;
  justify-content:center;
}
.nav .nav-flex{
  width: 33%;
}
.nav .btn{
  line-height: 90rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
  padding-top: 10rpx;
}
.nav .title{
  line-height: 90rpx;
  font-size: 30rpx;
  text-align: center;
}

.flex-item {
  width: 90rpx;
  /* height: 100px; */
}

.kcb-item {
  position: absolute;             
  justify-content: center;
  display: flex;
  align-items: center;
  border-radius: 5px;
}

.smalltext {
  font-size: 8pt;
  color: #fff;
  /* color: black; */
  padding-left: 2px;
}

.allweek{
  white-space: nowrap;
  background: #FFFCE3;
}
/* 隐藏scroll-view滚动条 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.allweek .btnx{
  display: inline-block;
  background-color: #C0EAFA;
  margin-right: 20rpx;
  margin-left: 20rpx;
  width: 100rpx;
  height: 110rpx;
  border-radius: 20rpx;
  vertical-align:top;
}
.allweek .select{
  /* 暂时设置的颜色 */
  background-color: rgba(183,104,228, 0.77);
}
.allweek #cur{
  background-color: rgba(97,249,233,0.77) !important;
}
.btnx .btnxtitle{
  width: 100%;
  height: 30rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
}
.btnx .btnxtitle>text{
  font-size: 30rpx;
}
.btnx .btnxcontent{
  width: 70rpx;
  height: 70rpx;
  /* border: 1px solid black; */
  margin: 6rpx auto;
}

.top {
  display: flex;
  flex-direction: row;
  /* margin-left: 55rpx; */
  /* background-color: #d2e6b3; */
  /* color: #7cba23; */
  color: #000;
}
.top .month{
  display: inline-block;
  width: 65rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 12pt;
}
.top-text {
  width: 100rpx;
  height: 70rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.scroll {
  height: 1170rpx;
  z-index: 10;
  position: fixed;
}

.left {
  width: 65rpx;
  height: 112rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.change-week{
  background-color: #fff;
}

.classSection{
  font-size: 10pt;
}
.classTimestart{
  font-size: 7pt;
}
.classTimeend{
  font-size: 7pt;
}